<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="AllThatXamarin.Views.ExplorePage"
             Title="Explore Xamarin!">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label
                Text="Map"
                FontAttributes="Bold"
                Padding="5,0,5,0"
                FontSize="Subtitle"/>
            <Button x:Name="OpenMap_Button"
                    Text="🚗 The way to MS building!"
                    Clicked="OnOpenMapButton_Clicked"/>
            <Grid Padding="15"/>
            <Label
                Text="Dial"
                FontAttributes="Bold"
                Padding="5,0,5,0"
                FontSize="Subtitle"/>
            <Button x:Name="OpenDial_Button"
                    Text="☎ Click to call.. to whom?"
                    Clicked="OnOpenDialButton_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>